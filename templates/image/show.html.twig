{% extends 'admin_base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ image.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>
                    {% if image is not empty %} {# si img présente affiche là dans tableau#}
                        <img class="img-fluid" src="{{ asset(image.webPath) }}">
                    {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_image') }}">{{"back_to_list"|trans}}</a>

    <a href="{{ path('image_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
