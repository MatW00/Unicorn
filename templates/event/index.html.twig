{% extends 'admin_base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div class="bodyindex">
        <div class="container">
            <h1>{{ 'Events'|trans }}</h1>

            <table class="table">
                <tbody>
                {% for event in events %}
                    <tr>
                        
                        <td>{{ event.title }}</td>
                        <td>{{ event.content }}</td>
                        <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        
                        
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    
{% endblock %}
