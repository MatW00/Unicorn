{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="container">
        {% for event in events %}
        <section class="portfolio-experiment">
        <a href="{{ path('home')}}">
         
        <div class="row">
            <div class="col-4 bg-primary colonne1"><p>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</p></div>
            <div class="col-6 colonne2"><p>{{ event.title }}-{{ event.location }}</p></div>
            <span class="line -right"></span>
            <span class="line -top"></span>
            <span class="line -left"></span>
            <span class="line -bottom"></span>
        </div>
        
        </a>
        </section>
        {% endfor %}
    </div>
{% endblock %}
