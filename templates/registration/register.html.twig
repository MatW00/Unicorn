{% extends 'base.html.twig' %}

{% block title %}{{"user.register"|trans}}{% endblock %}

{% block body %}
<div class="login-container text-c animated flipInX">
    <div>
        <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
    </div>
    <div class="container-content">
        <h3 class="text-whitesmoke">{{"user.register"|trans}}</h3>
        <form class="margin-t text-whitesmoke" method="POST">
        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_row(registrationForm.email, 
                {'attr': {"class": "form-control", 'placeholder': 'user.email_example'|trans}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, 
                {'attr': {"class": "form-control", 'placeholder': "user.password"|trans }}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms, {label_attr: {class: 'checkbox-custom'}}) }}
            </div>

            <button type="submit" class="form-button button-l margin-b">
                {{"user.register"|trans}}
            </button>
            <a class="text-rose" href="{{path("app_register")}}">
                <small>{{"user.login"|trans}}</small>
            </a>
        {{ form_end(registrationForm) }}
        </form>
    </div>
</div>

